    name = "inject_scripts_for_prod",
    outs = ["index.html"],
    args = [
        "--html=$(execpath //projects/shell-chrome/src:_index.html)",
        "--out=$@",
        "--roots=. $(RULEDIR)",
        "--assets",
    ] + ["$(execpath %s)" % s for s in _ASSETS],
    data = ["//projects/shell-chrome/src:_index.html"] + _ASSETS,
)

